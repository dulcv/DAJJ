<template>
  <v-card class="pa-4" :style="{ border: borde || 'none' }">
    <!-- Imagen -->
    <v-img v-if="imagen" :src="imagen" height="200px" class="mb-4" />

    <!-- Ícono -->
    <v-icon v-if="icono" :color="color" size="100" class="mb-2 text-center">
      {{ icono }}
    </v-icon>

    <!-- Título -->
    <v-card-title
      v-if="titulo"
      class="text-h5 font-weight-bold"
      :style="{ color: color || '#035928', fontFamily: 'Poppins, sans-serif' }"
    >
      {{ titulo }}
    </v-card-title>

    <!-- Texto principal -->
    <v-card-text v-if="texto" :style="{ fontFamily: 'Poppins, sans-serif', textAlign: 'justify', lineHeight: '1.8' }">
      {{ texto }}
    </v-card-text>

    <!-- Lista opcional -->
    <v-list v-if="lista && lista.length">
      <v-list-item v-for="(item, i) in lista" :key="i">
        <v-list-item-icon>
          <v-icon color="green">mdi-check</v-icon>
        </v-list-item-icon>
        <v-list-item-content>
          <v-list-item-title>{{ item }}</v-list-item-title>
        </v-list-item-content>
      </v-list-item>
    </v-list>

    <!-- Contenido extra -->
    <slot />
  </v-card>
</template>

<script setup>
defineProps({
  imagen: String,
  titulo: String,
  texto: String,
  icono: String,
  color: String,
  lista: Array,
  borde: String
})
</script>
